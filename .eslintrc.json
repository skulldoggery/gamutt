{
    "root":true,
    
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "solid"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:solid/typescript",
        "plugin:tailwindcss/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "tailwindcss/no-custom-classname": ["off"]
    },
    "overrides": [
        {
          "files": ["**/*.{ts,tsx,js,jsx}"]
        }
      ]
}
